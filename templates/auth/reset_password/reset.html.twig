{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<header class="mb-28 border-b border-gray-200">
    <nav class="px-4 py-2.5">
        <a href="{{ path('app_welcome') }}" class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
            <div class="flex items-center mb-4 text-2xl font-semibold text-gray-900 dark:text-white">
                <img class="w-8 h-8 mr-2" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/symfony/symfony-original.svg" alt="logo">
                Symfony    
            </div>
        </a>
    </nav>
</header>

<section>
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <a href="/" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
            YourApp
        </a>
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Reset your password
                </h1>
                
                {{ form_start(resetForm, {'attr': {'class': 'space-y-4 md:space-y-6'}}) }}
                
                    <div>
                        {{ form_label(resetForm.plainPassword, null, {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                        }) }}
                        {{ form_widget(resetForm.plainPassword, {
                            'attr': {
                                'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500',
                                'placeholder': 'Enter your new password'
                            }
                        }) }}
                        {{ form_errors(resetForm.plainPassword, {
                            'attr': {'class': 'mt-2 text-sm text-red-600 dark:text-red-500'}
                        }) }}
                    </div>

                    <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Reset password
                    </button>
                    
                    <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                        Remember your password? 
                        <a href="{{ path('app_login') }}" class="font-medium text-blue-600 hover:underline dark:text-blue-500">Sign in</a>
                    </p>
                    
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}