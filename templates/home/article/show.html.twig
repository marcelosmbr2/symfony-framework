{% extends 'base.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        {# Breadcrumb #}
        <nav class="flex mb-6" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_article_index') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                        <svg class="w-3 h-3 mr-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                        </svg>
                        Artigos
                    </a>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                        </svg>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">{{ article.name }}</span>
                    </div>
                </li>
            </ol>
        </nav>

        {# Article Card #}
        <article class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden">
            {# Thumbnail (se existir) #}
            {% if article.thumbnail %}
                <img class="w-full h-64 object-cover" src="{{ article.thumbnail }}" alt="{{ article.name }}">
            {% endif %}

            {# Article Header #}
            <div class="p-6 md:p-8 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
                        {{ article.category }}
                    </span>
                    
                    {% if article.isPublished %}
                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
                            Publicado
                        </span>
                    {% else %}
                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">
                            Rascunho
                        </span>
                    {% endif %}
                </div>

                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
                    {{ article.name }}
                </h1>

                <div class="flex items-center text-sm text-gray-600 dark:text-gray-400 space-x-4">
                    {% if article.author %}
                        <div class="flex items-center">
                            <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                            </svg>
                            <span>{{ article.author.email }}</span>
                        </div>
                    {% endif %}
                    
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm14-7.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1Zm0 4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1Zm-5-4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1Zm0 4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1Zm-5-4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1Zm0 4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1ZM20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4Z"/>
                        </svg>
                        <span>{{ article.createdAt|date('d/m/Y') }}</span>
                    </div>
                </div>
            </div>

            {# Article Description #}
            {% if article.description %}
                <div class="p-6 md:p-8 bg-blue-50 dark:bg-gray-900 border-l-4 border-blue-500">
                    <p class="text-lg text-gray-700 dark:text-gray-300 italic">
                        {{ article.description }}
                    </p>
                </div>
            {% endif %}

            {# Article Content #}
            {% if article.content %}
                <div class="p-6 md:p-8 prose prose-lg dark:prose-invert max-w-none article-content">
                    {{ article.content|raw }}
                </div>
            {% endif %}

            {# Actions #}
            {% if app.user and article.author == app.user %}
                <div class="p-6 md:p-8 bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
                    <div class="flex flex-wrap gap-3">
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 inline-flex items-center">
                            <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17v1a.97.97 0 0 1-.933 1H1.933A.97.97 0 0 1 1 18V5.828a2 2 0 0 1 .586-1.414l2.828-2.828A2 2 0 0 1 5.828 1h8.239A.97.97 0 0 1 15 2M6 1v4a1 1 0 0 1-1 1H1m13.14.772 2.745 2.746M18.1 5.612a2.086 2.086 0 0 1 0 2.953l-6.65 6.646-3.693.739.739-3.692 6.646-6.646a2.087 2.087 0 0 1 2.958 0Z"/>
                            </svg>
                            Editar Artigo
                        </a>
                        
                        <a href="{{ path('app_article_index') }}" class="py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 inline-flex items-center">
                            <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
                            </svg>
                            Voltar para Lista
                        </a>
                    </div>
                </div>
            {% endif %}
        </article>
    </div>
</div>

<style>
    /* Estilos específicos para o conteúdo do CKEditor */
    .article-content img {
        @apply rounded-lg shadow-lg my-6 max-w-full h-auto;
    }
    
    .article-content h2 {
        @apply text-2xl font-bold mt-8 mb-4 text-gray-900 dark:text-white;
    }
    
    .article-content h3 {
        @apply text-xl font-bold mt-6 mb-3 text-gray-800 dark:text-gray-100;
    }
    
    .article-content h4 {
        @apply text-lg font-semibold mt-4 mb-2 text-gray-800 dark:text-gray-100;
    }
    
    .article-content ul, .article-content ol {
        @apply my-4 pl-6 space-y-2;
    }
    
    .article-content ul {
        @apply list-disc;
    }
    
    .article-content ol {
        @apply list-decimal;
    }
    
    .article-content li {
        @apply text-gray-700 dark:text-gray-300;
    }
    
    .article-content p {
        @apply mb-4 text-gray-700 dark:text-gray-300 leading-relaxed;
    }
    
    .article-content blockquote {
        @apply border-l-4 border-gray-300 dark:border-gray-600 pl-4 my-4 italic text-gray-600 dark:text-gray-400;
    }
    
    .article-content a {
        @apply text-blue-600 dark:text-blue-400 hover:underline;
    }
    
    .article-content code {
        @apply bg-gray-100 dark:bg-gray-700 px-1.5 py-0.5 rounded text-sm font-mono;
    }
    
    .article-content pre {
        @apply bg-gray-100 dark:bg-gray-700 p-4 rounded-lg overflow-x-auto my-4;
    }
    
    .article-content table {
        @apply w-full my-6 border-collapse;
    }
    
    .article-content table th,
    .article-content table td {
        @apply border border-gray-300 dark:border-gray-600 px-4 py-2 text-left;
    }
    
    .article-content table th {
        @apply bg-gray-100 dark:bg-gray-700 font-semibold;
    }
    
    .article-content strong {
        @apply font-bold;
    }
    
    .article-content em {
        @apply italic;
    }
</style>
{% endblock %}