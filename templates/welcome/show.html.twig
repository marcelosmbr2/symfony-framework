{% extends 'welcome/layout.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block content %}
<div class="bg-white dark:bg-gray-900 py-8 lg:py-16">
    <div class="max-w-screen-xl mx-auto px-4">
        {# Breadcrumb #}
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_welcome') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                        <svg class="w-3 h-3 mr-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                        </svg>
                        Home
                    </a>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                        </svg>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">{{ article.name }}</span>
                    </div>
                </li>
            </ol>
        </nav>

        {# Article Container #}
        <article class="format format-sm sm:format-base lg:format-lg format-blue dark:format-invert mx-auto max-w-4xl">
            {# Header #}
            <header class="mb-8 lg:mb-12 not-format">
                <div class="flex items-center mb-6 not-italic">
                    {% if article.author.avatar %}
                        <img class="mr-4 w-16 h-16 rounded-full" src="{{ article.author.avatar }}" alt="{{ article.author.username }}">
                    {% else %}
                        <div class="mr-4 w-16 h-16 rounded-full bg-blue-600 flex items-center justify-center text-white text-2xl font-bold">
                            {{ article.author.username|slice(0, 1)|upper }}
                        </div>
                    {% endif %}
                    <div>
                        <span class="text-xl font-bold text-gray-900 dark:text-white">{{ article.author.username }}</span>
                        <p class="text-base text-gray-500 dark:text-gray-400">
                            <time datetime="{{ article.createdAt|date('Y-m-d') }}">{{ article.createdAt|date('d \\d\\e F \\d\\e Y') }}</time>
                        </p>
                    </div>
                </div>

                <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800 mb-4">
                    <svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
                        <path d="M15 7h1a2 2 0 012 2v5.5a1.5 1.5 0 01-3 0V7z"></path>
                    </svg>
                    {{ article.category }}
                </span>

                <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">
                    {{ article.name }}
                </h1>

                {% if article.description %}
                    <p class="lead text-xl text-gray-500 dark:text-gray-400 border-l-4 border-blue-500 pl-4 py-2 bg-blue-50 dark:bg-gray-800 rounded">
                        {{ article.description }}
                    </p>
                {% endif %}
            </header>

            {# Content #}
            {% if article.content %}
                <div class="article-content prose prose-lg dark:prose-invert max-w-none">
                    {{ article.content|raw }}
                </div>
            {% else %}
                <p class="text-gray-500 dark:text-gray-400 italic">This article does not have content yet.</p>
            {% endif %}

            {# Footer Actions #}
            <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
                <div class="flex flex-wrap gap-4 items-center justify-between">
                    <a href="{{ path('app_welcome') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                        <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
                        </svg>
                        Back to Blog
                    </a>

                    {% if app.user and article.author.id == app.user.id %}
                        <div class="flex gap-2">
                            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                                <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17v1a.97.97 0 0 1-.933 1H1.933A.97.97 0 0 1 1 18V5.828a2 2 0 0 1 .586-1.414l2.828-2.828A2 2 0 0 1 5.828 1h8.239A.97.97 0 0 1 15 2M6 1v4a1 1 0 0 1-1 1H1m13.14.772 2.745 2.746M18.1 5.612a2.086 2.086 0 0 1 0 2.953l-6.65 6.646-3.693.739.739-3.692 6.646-6.646a2.087 2.087 0 0 1 2.958 0Z"/>
                                </svg>
                                Edit Article
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </article>
    </div>
</div>

<style>
    /* Styles for CKEditor content */
    .article-content {
        line-height: 1.8;
        color: #374151;
    }
    
    .dark .article-content {
        color: #d1d5db;
    }
    
    .article-content img {
        @apply rounded-lg shadow-lg my-6 max-w-full h-auto;
    }
    
    .article-content h2 {
        @apply text-2xl font-bold mt-8 mb-4 text-gray-900 dark:text-white;
    }
    
    .article-content h3 {
        @apply text-xl font-bold mt-6 mb-3 text-gray-800 dark:text-gray-100;
    }
    
    .article-content h4 {
        @apply text-lg font-semibold mt-4 mb-2 text-gray-800 dark:text-gray-100;
    }
    
    .article-content ul, .article-content ol {
        @apply my-4 pl-6 space-y-2;
    }
    
    .article-content ul {
        @apply list-disc;
    }
    
    .article-content ol {
        @apply list-decimal;
    }
    
    .article-content li {
        @apply text-gray-700 dark:text-gray-300;
    }
    
    .article-content p {
        @apply mb-4 text-gray-700 dark:text-gray-300 leading-relaxed;
    }
    
    .article-content blockquote {
        @apply border-l-4 border-gray-300 dark:border-gray-600 pl-4 my-4 italic text-gray-600 dark:text-gray-400;
    }
    
    .article-content a {
        @apply text-blue-600 dark:text-blue-400 hover:underline;
    }
    
    .article-content code {
        @apply bg-gray-100 dark:bg-gray-700 px-1.5 py-0.5 rounded text-sm font-mono;
    }
    
    .article-content pre {
        @apply bg-gray-100 dark:bg-gray-700 p-4 rounded-lg overflow-x-auto my-4;
    }
    
    .article-content pre code {
        @apply bg-transparent p-0;
    }
    
    .article-content table {
        @apply w-full my-6 border-collapse;
    }
    
    .article-content table th,
    .article-content table td {
        @apply border border-gray-300 dark:border-gray-600 px-4 py-2 text-left;
    }
    
    .article-content table th {
        @apply bg-gray-100 dark:bg-gray-700 font-semibold;
    }
    
    .article-content strong {
        @apply font-bold;
    }
    
    .article-content em {
        @apply italic;
    }
</style>
{% endblock %}